---
import Nav from "../components/Nav.astro";
const { title = "John in Vantaa", description = "Minimal diary • portfolio • life in Finland" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} type="image/svg+xml" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${import.meta.env.BASE_URL}og-image.jpg`} />
    <meta name="theme-color" content="#0b1220" />
  </head>
  <body>
    <Nav />
    <main class="page">
      <slot />
      <footer class="footer">
        <div class="footer__inner">
          <span>© {new Date().getFullYear()} John • Vantaa, Finland</span>
          <span class="footer__sep">•</span>
          <a href={`${import.meta.env.BASE_URL}admin/`} class="footer__link">Edit content</a>
          <span class="footer__sep">•</span>
          <a href="https://github.com/ChibbsFN/portfolio" class="footer__link">GitHub</a>
        </div>
      </footer>
    </main>
  </body>
</html>

<style is:global>
  :root{
    --bg: #0b1220;
    --panel: rgba(255,255,255,.04);
    --border: rgba(255,255,255,.10);
    --text: rgba(255,255,255,.92);
    --muted: rgba(255,255,255,.72);
    --muted2: rgba(255,255,255,.58);
    --shadow: 0 18px 60px rgba(0,0,0,.35);
    --radius: 18px;
    --radius2: 24px;
    --max: 1120px;
  }
  *{ box-sizing: border-box; }
  html,body{ height:100%; }
  body{
    margin:0;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    background: radial-gradient(1200px 800px at 20% -10%, rgba(122,162,255,.18), transparent 55%),
                radial-gradient(900px 700px at 90% 10%, rgba(255,122,190,.12), transparent 55%),
                var(--bg);
    color: var(--text);
    line-height: 1.55;
  }
  a{ color: inherit; text-decoration: none; }
  a:hover{ text-decoration: none; }
  .page{
    padding: 96px 20px 56px;
  }
  .container{
    max-width: var(--max);
    margin: 0 auto;
  }

  /* Topbar */
  .topbar{
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(14px);
    background: linear-gradient(to bottom, rgba(11,18,32,.72), rgba(11,18,32,.35));
    border-bottom: 1px solid rgba(255,255,255,.06);
  }
  .topbar__inner{
    max-width: var(--max);
    margin: 0 auto;
    display:flex;
    align-items:center;
    gap: 14px;
    padding: 14px 20px;
  }
  .brand{
    display:flex; align-items:center; gap: 10px;
    font-weight: 650;
    letter-spacing: .2px;
  }
  .brand__dot{
    width: 14px; height: 14px;
    border-radius: 999px;
    background: linear-gradient(135deg, rgba(122,162,255,1), rgba(255,122,190,1));
    box-shadow: 0 10px 24px rgba(122,162,255,.22);
  }
  .brand__name{ opacity: .95; }
  .nav{
    margin-left: auto;
    display:flex;
    gap: 10px;
    padding: 6px;
    background: rgba(255,255,255,.03);
    border: 1px solid rgba(255,255,255,.06);
    border-radius: 999px;
  }
  .nav__link{
    font-size: 13px;
    padding: 8px 12px;
    border-radius: 999px;
    color: var(--muted);
  }
  .nav__link:hover{ background: rgba(255,255,255,.04); color: var(--text); }
  .nav__link.is-active{
    background: rgba(255,255,255,.07);
    color: var(--text);
    border: 1px solid rgba(255,255,255,.10);
  }
  .nav__cta{
    display:none;
    font-size: 13px;
    padding: 10px 12px;
    border-radius: 12px;
    background: rgba(255,255,255,.07);
    border: 1px solid rgba(255,255,255,.12);
  }
  .nav__cta:hover{ background: rgba(255,255,255,.10); }
  @media (min-width: 980px){
    .nav__cta{ display:inline-flex; }
  }

  /* Typography */
  h1,h2,h3{ line-height: 1.2; margin: 0 0 10px; }
  h1{ font-size: clamp(34px, 4vw, 52px); letter-spacing: -0.8px; }
  h2{ font-size: 20px; margin-top: 26px; letter-spacing: -.2px; }
  h3{ font-size: 15px; margin-top: 18px; color: var(--muted); font-weight: 650; }
  p{ margin: 0 0 14px; color: var(--muted); }
  .lead{ font-size: 15px; color: var(--muted); max-width: 62ch; }
  .kicker{ font-size: 12px; color: var(--muted2); letter-spacing: .4px; text-transform: uppercase; }
  .hr{ height: 1px; background: rgba(255,255,255,.08); margin: 18px 0; }

  /* Cards */
  .grid{
    display:grid;
    gap: 18px;
  }
  .grid.two{ grid-template-columns: 1fr; }
  @media (min-width: 980px){
    .grid.two{ grid-template-columns: 1.1fr .9fr; align-items: start; }
  }
  .card{
    background: linear-gradient(180deg, rgba(255,255,255,.05), rgba(255,255,255,.03));
    border: 1px solid rgba(255,255,255,.10);
    border-radius: var(--radius2);
    box-shadow: var(--shadow);
    padding: 20px;
  }
  .card.soft{
    background: rgba(255,255,255,.03);
    box-shadow: none;
    border-radius: var(--radius);
  }
  .pillrow{
    display:flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 10px;
  }
  .pill{
    display:inline-flex;
    align-items:center;
    gap: 6px;
    font-size: 12px;
    padding: 8px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(255,255,255,.03);
    color: var(--muted);
  }
  .btn{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    gap: 8px;
    font-size: 13px;
    padding: 10px 12px;
    border-radius: 12px;
    border: 1px solid rgba(255,255,255,.12);
    background: rgba(255,255,255,.06);
    color: var(--text);
  }
  .btn:hover{ background: rgba(255,255,255,.10); }
  .btn.primary{
    background: linear-gradient(135deg, rgba(122,162,255,.25), rgba(255,122,190,.20));
    border-color: rgba(255,255,255,.18);
  }

  /* Portrait */
  .portrait{
    border-radius: var(--radius2);
    overflow:hidden;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(255,255,255,.02);
  }
  .portrait__img{
    width:100%;
    aspect-ratio: 4/5;
    object-fit: cover;
    display:block;
    filter: saturate(1.05) contrast(1.05);
  }
  .portrait__meta{
    padding: 14px 16px;
    display:flex;
    align-items:center;
    justify-content: space-between;
    gap: 12px;
  }
  .badge{
    font-size: 12px;
    color: var(--muted);
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(255,255,255,.03);
    padding: 7px 10px;
    border-radius: 999px;
  }

  /* Lists */
  .list{ margin: 0; padding: 0; list-style: none; display:flex; flex-direction: column; gap: 10px; }
  .item{
    display:flex;
    flex-direction: column;
    gap: 2px;
    padding: 12px 12px;
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,.08);
    background: rgba(255,255,255,.02);
  }
  .item:hover{ border-color: rgba(255,255,255,.14); background: rgba(255,255,255,.03); }
  .item__top{ display:flex; justify-content: space-between; gap: 12px; align-items: baseline; }
  .item__title{ font-weight: 650; color: var(--text); }
  .item__meta{ font-size: 12px; color: var(--muted2); white-space: nowrap; }
  .item__desc{ font-size: 13px; color: var(--muted); }

  /* Prose */
  .prose{
    max-width: 72ch;
  }
  .prose a{ text-decoration: underline; text-decoration-color: rgba(255,255,255,.25); }
  .prose a:hover{ text-decoration-color: rgba(255,255,255,.45); }
  .prose code{
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size: 0.92em;
    padding: 2px 6px;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(0,0,0,.18);
  }
  .prose hr{ border: none; height: 1px; background: rgba(255,255,255,.08); margin: 18px 0; }

  .footer{ margin-top: 30px; }
  .footer__inner{
    max-width: var(--max);
    margin: 0 auto;
    padding: 16px 20px;
    display:flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: center;
    color: var(--muted2);
    font-size: 12px;
  }
  .footer__link{ color: var(--muted); }
  .footer__link:hover{ color: var(--text); text-decoration: underline; text-decoration-color: rgba(255,255,255,.25); }
  .footer__sep{ opacity: .45; }
</style>
